# Prompt color codes
white='\[\033[1;37m\]'
yellow='\[\033[1;33m\]'
green='\[\033[1;32m\]'
blue='\[\033[1;34m\]'
reset='\[\033[0m\]'

# Git branch in prompt
parse_git_branch() {
  git branch 2>/dev/null | grep '\*' | sed 's/* //'
}

# Custom PS1 with Git info
PS1="${white}[${green}\u${white}@${green}\h ${blue}\W${yellow}\$(parse_git_branch)${white}]${reset}\$ "
